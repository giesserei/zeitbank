<?xml version="1.0" encoding="UTF-8"?>

<form>
	<fieldset name="updangebot">

		<field name="titel" type="text" label="Titel:" class="inputbox" size="52" maxlength="100" required="true" />
		
		<field name="anforderung" type="textarea" label="Anforderungen: " description="Was benötigt man für Voraussetzungen für die Arbeit" 
		       class="inputbox" rows="4" cols="52" maxlength="255" />
		       
		<field name="zeit" type="text" label="Termin/Zeitraum: " description="Innerhalb welcher Zeit soll die Arbeit ausgeführt werden" 
           class="inputbox" size="52" maxlength="255" />
           
    <field name="aufwand" type="text" label="Buchbarer Aufwand: " description="Wieviel Stunden können verbucht werden" 
           class="inputbox" size="52" maxlength="255" />
		
		<!-- Filter funktioniert mit Joomla 2.5 noch nicht -> siehe daher ZeitbankModelUpdangebot -->
    <field name="beschreibung" type="editor" label="Beschreibung" height="200" hide="article,pagebreak,readmore,image" 
           filter="JComponentHelper::filterText" required="true"/>
		
		<field name="art" type="list" default="1" label="Art des Angebotes: " description="Bitte auswählen" class="inputbox">
      <option value="1">Arbeitsangebot</option>
      <option value="2">Stundentausch</option>
    </field> 
    
    <field name="richtung" type="list" default="0" label="Suche / Biete: " description="Bitte auswählen" class="inputbox">
      <option value="1">Suche Stunden</option>
      <option value="2">Biete Stunden</option>
    </field> 
    
    <field name="arbeit_id" type="text" default="-1" label="Arbeitsgattung: " filter="integer"/>
		
		<field name="status" type="list" default="1" label="Status: " description="Bitte auswählen" class="inputbox">
      <option value="0">Inaktiv</option>
      <option value="1">Aktiv</option>
    </field>  
		
		<field name="ablauf" type="text" label="Ablauf in: " description="Bitte auswählen"/>

	</fieldset>
</form>